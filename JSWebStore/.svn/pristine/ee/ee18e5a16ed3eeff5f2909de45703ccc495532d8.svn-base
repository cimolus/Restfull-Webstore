WEBSTORE.GoodsService = {
	products : null ,
	
	productTemplate: '<h2 class="productName">{name}</h2>' 
		+'<p class="description">{description}</p>'
		+'<p class="detaileDescription">{detaileDescription}</p>'
		+'<div class="price">{price}</div>',
	
	loadAllProducts: function() {
		$.ajax({
	         type: 'POST',
	         url: "http://localhost:8080/webstore/product/3",
	         async: false,
	         jsonpCallback: 'getEmployeeCallback',
	         dataType: 'jsonp',
	         success: function(json) {
	        	 WEBSTORE.GoodsService.products = json;
	         }
	     });
	},
	
	getProducts: function() {
		WEBSTORE.GoodsService.loadAllProducts();
		var json = WEBSTORE.GoodsService.products;
		WEBSTORE.TemplateBuilder.buildTemplate(WEBSTORE.GoodsService.productTemplate, json);
	}

};
